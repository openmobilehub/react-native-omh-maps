{
  "$schema": "https://json.schemastore.org/eslintrc.json",
  "root": true,
  "extends": ["@react-native", "prettier"],
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "quoteProps": "consistent",
        "singleQuote": true,
        "tabWidth": 2,
        "trailingComma": "es5",
        "useTabs": false
      }
    ],
    "react/no-unstable-nested-components": "off"
  },
  "env": {
    "node": true
  },
  "ignorePatterns": ["node_modules/", "lib/", "coverage/", "docs/"]
}
